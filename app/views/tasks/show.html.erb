<h1>やること<%= @task.id %>詳細</h1>
<div class="row">
      <div class="col-xs-12 col-lg-6 col-lg-offset-3 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">
                        
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <tr>
                <th class="text-center">ID</th>
                <td><%= @task.id %></td>
            </tr>
            <tr>
                <th class="text-center">やること</th>
                <td><%= @task.content %></td>
            </tr>
            <tr>
                <th class="text-center">状態</th>
                <td><%= @task.status %></td>
            </tr>
        </table>
        <%= link_to '一覧に戻る', tasks_path, class: "btn btn-info" %>
        <%= link_to 'やることを編集する', edit_task_path(@task), class: "btn btn-primary" %>
        <%= link_to 'やることを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %>

    </div>
</div>