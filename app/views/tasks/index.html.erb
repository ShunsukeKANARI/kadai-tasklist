<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

<h1>やること一覧</h1>
<div class="row">
    <div class="col-xs-12 col-lg-6 col-lg-offset-3 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">

        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
              <tr>
                <th>ID</th>
                <th>やること</th>
                <th>状態</th>
              </tr>
            </thead>
            <tbody>
                <% @tasks.each.with_index(params[:page].present? ? (1 + 10 * (params[:page].to_i - 1)) : 1) do |task, index| %>
                    <tr>
                        <td class="text-left"><%= link_to index, task %></td>
                        <td class="text-left"><%= task.content %></td>
                        <td class="text-left"><%= task.status %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
                        
        <%= paginate @tasks %>
        <div>
            <%= link_to '新規やること追加', new_task_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>

  
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスクリスト！</h1>
    </div>
  </div>
<% end %>
